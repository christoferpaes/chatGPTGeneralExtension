{
  "manifest_version": 2,
  "name": "ChatGPT Webpage Interaction",
  "version": "1.0",
  "description": "Interact with ChatGPT using webpage content",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
